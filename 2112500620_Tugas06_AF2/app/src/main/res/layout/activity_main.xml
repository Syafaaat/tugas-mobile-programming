<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="60dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
               android:id="@+id/persegipanjang"
                android:onClick="persegipanjang"
                android:layout_gravity="center"
                android:background="@drawable/circular_bg"
                android:src="@drawable/persegipanjang"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="persegi panjang"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
           android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/bujur"
                android:onClick="bujur"
                android:src="@drawable/bujursangkar"
                android:background="@drawable/circular_bg"
                android:padding="10dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="bujur sangka"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
               android:id="@+id/segitiga"
                android:onClick="segitiga"
                android:layout_gravity="center"
                android:padding="20dp"
                android:src="@drawable/segitiga"
                android:background="@drawable/circular_bg"

                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="Segitiga"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
           android:layout_marginBottom="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
               android:id="@+id/lingkaran"
                android:onClick="lingkaran"
                android:src="@drawable/lingkaran"
                android:background="@drawable/circular_bg"
                android:padding="15dp"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="lingkaran"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/layang"
                android:onClick="layang"
                android:layout_gravity="center"
                android:src="@drawable/layang"
                android:background="@drawable/circular_bg"
                android:padding="10dp"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="layang layang"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >
            <ImageView
                android:id="@+id/ketupat"
                android:onClick="ketupat"
                android:src="@drawable/ketupat"
                android:layout_gravity="center"
                android:padding="10dp"
                android:background="@drawable/circular_bg"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <TextView
                android:text="belah ketupat"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>