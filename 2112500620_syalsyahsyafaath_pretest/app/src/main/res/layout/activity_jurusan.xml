<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".jurusanActivity">

<TextView
    android:text="JURUSAN"
    android:textSize="40dp"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


    <TextView
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fakultas Teknologi Informasi"/>

    <ImageView
        android:layout_width="531dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/fti" />
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fakultas Ekonomi And Bisnis"/>

    <ImageView
        android:layout_width="531dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/feb" />

    <TextView
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fakultas Teknik"/>

    <ImageView
        android:layout_width="531dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/teknik" />
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fakultas Ilmu Sosial Dan Ilmu Politik"/>

    <ImageView
        android:layout_width="531dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/fisip" />


</LinearLayout>