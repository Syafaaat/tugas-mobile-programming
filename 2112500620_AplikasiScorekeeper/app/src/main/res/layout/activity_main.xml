<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/textview_team"
            android:layout_centerHorizontal="true"
            android:text="TEAM 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/decreaseTeam1"
            android:onClick="decrease"
            style="@style/button_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_minus"
            android:layout_width="@dimen/buttom_size"
            android:layout_height="@dimen/buttom_size"/>
        <TextView
            android:id="@+id/score_1"
            android:textSize="@dimen/buttom_size"
            android:layout_centerInParent="true"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/increaseTeam1"
            android:onClick="increase"
            style="@style/button_style"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_plus"
            android:layout_width="@dimen/buttom_size"
            android:layout_height="@dimen/buttom_size"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:textSize="@dimen/textview_team"
            android:layout_centerHorizontal="true"
            android:text="TEAM 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/decreaseTeam2"
            android:onClick="decrease"
            style="@style/button_style"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_minus"
            android:layout_width="@dimen/buttom_size"
            android:layout_height="@dimen/buttom_size"/>
        <TextView
            android:id="@+id/score_2"
            android:textSize="@dimen/buttom_size"
            android:layout_centerInParent="true"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/increaseTeam2"
            android:onClick="increase"
            style="@style/button_style"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_plus"
            android:layout_width="@dimen/buttom_size"
            android:layout_height="@dimen/buttom_size"/>
    </RelativeLayout>



</LinearLayout>