<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentUpload">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Tautan Foto Anda"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/etFoto"
            android:hint="masukan di sini"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Nama Produk"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/etNamaProduk"
            android:hint="masukan di sini"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Harga"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/etHarga"
            android:hint="masukan di sini"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukan Stok Barang"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>

        <EditText
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/etStok"
            android:hint="masukan di sini"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btnTambah"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:backgroundTint="#50C54D"
                android:text="Tambah"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/btnCara"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:backgroundTint="#46C5CA"
                android:text="Cara"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>