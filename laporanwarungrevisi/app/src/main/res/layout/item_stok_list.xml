<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/radius_bg"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_icon_stok"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <LinearLayout
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_icon_stok"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nama_produk_stok"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:text="title: title data"/>
            <EditText
                android:id="@+id/harga_barang_stok"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text="isi data"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/simpanStok"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#50C54D"
                    android:text="simpan"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>